    "lugiaHidden": {
      "desc": "是否渲染当前组件",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false
    },
    "defaultStart": {
      "desc": "幻灯片初始状态开始激活的索引，默认从0开始",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "start": {
      "desc": "手动切换,指定幻灯片开始的索引",
      "type": "number",
      "designOnly": false,
      "injectProps": false
    },
    "autoPlay": {
      "desc": "是否自动切换",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": true
    },
    "delay": {
      "desc": "自动切换的时间间隔，单位为毫秒",
      "type": "number",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": 3000
    },
    "indicator": {
      "desc": "是否显示指示器",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": true
    },
    "indicatorType": {
      "desc": "指示器的显示方式",
      "type": "IndicatorType",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": "horizontal"
    },
    "switchButton": {
      "desc": "是否显示切换按钮",
      "type": "boolean",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": true
    },
    "switchType": {
      "desc": "动画切换的方式",
      "type": "SwitchType",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": "horizontal"
    },
    "animationTime": {
      "desc": "单次动画执行的时间，单位为毫秒",
      "type": "number",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": 500
    },
    "action": {
      "desc": "指示器触发切换的方式",
      "type": "ActionType",
      "designOnly": false,
      "injectProps": false,
      "propsDefaultValue": "hover"
    }
  },
  "events": {
    "onChange": {
      "desc": "触发指示器切换或点击切换按钮时触发",
      "args": [
        {
          "name": "newValue",
          "desc": "切换到下一次面板的索引值",
