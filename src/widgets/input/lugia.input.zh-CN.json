    "type": {
      "type": "InputType",
      "desc": "input类型",
      "propsDefaultValue": "text"
    },
    "isShowClearButton": {
      "type": "boolean",
      "desc": "是否显示清除按钮",
      "propsDefaultValue": true
    }
  },
  "events": {
    "onClick": {
      "desc": "点击输入框时触发",
      "args": [
        {
          "name": "event",
