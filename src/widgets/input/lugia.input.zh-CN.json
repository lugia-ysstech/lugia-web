        {
          "name": "event",
          "desc": "当鼠标移出输入框外触发的事件",
          "type": "MouseEvent"
        }
      ]
    },
    "getFocus": {
      "desc": "输入框主动聚焦事件",
      "args": [
        {
          "name": "focus",
          "desc": "输入框的聚焦方法",
          "type": "Function"
