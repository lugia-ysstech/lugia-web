    "lugiaHidden": {
      "type": "boolean",
      "desc": "是否渲染当前组件",
      "defaultValue": false
    },
    "createPortal": {
      "type": "boolean",
      "desc": "是否全局弹出框",
      "propsDefaultValue": false
    },
    "popupContainerId": {
      "type": "ContainerDomIdType",
      "desc": "配置弹出框的作用容器id"
    },
    "disabled": {
      "type": "boolean",
      "desc": "禁用状态,是否不可用",
      "defaultValue": false
    },
    "transform": {
      "type": "boolean",
      "desc": "是否开启转换,仅在amountPrefix='¥'时生效",
      "defaultValue": true
    },
    "viewClass": {
      "type": "string",
      "desc": "用于配置主题属性"
    },
    "size": {
      "type": "InputSize",
      "desc": "可配置三种尺寸大小的input ('large' , 'default' , 'small'),高度分别为 40px、32px 和 24px。",
      "defaultValue": "default"
    },
    "placeholder": {
      "type": "string",
      "desc": "input输入提示信息"
    },
    "amountPrefix": {
      "type": "PrefixType",
      "desc": "货币种类,默认'¥'",
      "defaultValue": "¥"
    },
    "defaultValue": {
      "type": "string",
      "desc": "默认显示内容"
    },
    "value": {
      "type": "string",
      "desc": "显示内容"
    },
    "validateStatus": {
      "type": "ValidateStatus",
      "desc": "校验状态"
